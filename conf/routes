# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Strategy pattern
GET     /strategy                   controllers.strategy.Strategy.myresponse()
POST     /strategy/                 controllers.strategy.Strategy.submitStrategyPOST()
GET     /strategy/                 controllers.strategy.Strategy.submitStrategyGET(strategynum: Int)
GET     /strategy/:strategynum                 controllers.strategy.Strategy.submitStrategyGET(strategynum: Int)

# manage patterns
GET		/pattern					controllers.pattern.ManagePatterns.addForm()
POST	/pattern					controllers.pattern.ManagePatterns.addPost()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# login & register
GET		/login						controllers.userauth.UserAuth.loginGET()
POST	/login						controllers.userauth.UserAuth.login()

GET		/register					controllers.userauth.UserAuth.regGET()
POST	/register					controllers.userauth.UserAuth.register()

GET		/logout						controllers.userauth.UserAuth.logout()
