# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Strategy pattern
GET     /strategy                   controllers.Strategy.myresponse()
POST     /strategy/                 controllers.Strategy.submitStrategyPOST()
GET     /strategy/                 controllers.Strategy.submitStrategyGET(strategynum: Int)
GET     /strategy/:strategynum                 controllers.Strategy.submitStrategyGET(strategynum: Int)

# manage patterns
GET		/pattern					controllers.ManagePatterns.addForm()
POST	/pattern					controllers.ManagePatterns.addPost()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)